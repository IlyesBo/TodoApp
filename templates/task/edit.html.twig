{% extends 'base.html.twig' %}

{% block title %}Modifier la tâche - TodoApp{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Modifier la tâche</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            <div class="mb-3">
                {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    Veuillez entrer un titre.
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
            </div>

            <div class="mb-3 form-check">
                {{ form_widget(form.status, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.status, 'Terminée', {'label_attr': {'class': 'form-check-label'}}) }}
            </div>

            <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}